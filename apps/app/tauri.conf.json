{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeDevCommand": "pnpm turbo run dev --filter=@modrinth/app-frontend",
    "beforeBuildCommand": "pnpm turbo run build --filter=@modrinth/app-frontend",
    "frontendDist": "../app-frontend/dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "category": "Game",
    "copyright": "",
    "targets": [
      "nsis",
      "dmg",
      "appimage",
      "deb",
      "app"
    ],
    "externalBin": [],
    "icon": ["icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "installerHooks": "./nsis/hooks.nsi"
      }
    },
    "longDescription": "",
    "macOS": {
      "entitlements": "App.entitlements",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "shortDescription": "",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0 | libwebkit2gtk-4.0-37",
          "libgtk-3-0",
          "libayatana-appindicator3-1 | libappindicator3-1"
        ]
      },
      "appimage": {
        "bundleMediaFramework": true,
        "files": {
          "/usr/lib/x86_64-linux-gnu/libwebkit2gtk-4.1.so*": "lib/",
          "/usr/lib/x86_64-linux-gnu/libwebkit2gtk-4.0.so*": "lib/",
          "/usr/lib/x86_64-linux-gnu/libjavascriptcoregtk-4.1.so*": "lib/",
          "/usr/lib/x86_64-linux-gnu/libjavascriptcoregtk-4.0.so*": "lib/"
        }
      }
    },
    "fileAssociations": [
      {
        "ext": ["mrpack"],
        "mimeType": "application/x-modrinth-modpack+zip"
      }
    ]
  },
  "productName": "ArkRinth",
  "version": "../app-frontend/package.json",
  "mainBinaryName": "ArkRinth",
  "identifier": "ArkRinth",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["modrinth"]
      },
      "mobile": []
    }
  },
  "app": {
    "withGlobalTauri": false,
    "macOSPrivateApi": true,
    "webview": {
      "hardwareAcceleration": true
    },
    "windows": [
      {
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "ArkRinth",
        "width": 1280,
        "minHeight": 700,
        "minWidth": 1100,
        "visible": true,
        "zoomHotkeysEnabled": false,
        "decorations": false,
        "webview": {
          "additionalBrowserArgs": [
            "--enable-gpu",
            "--enable-gpu-compositing",
            "--enable-gpu-rasterization",
            "--enable-oop-rasterization",
            "--disable-gpu-sandbox",
            "--use-gl=desktop",
            "--enable-features=VaapiVideoDecoder,WebRTCPipeWireCapturer",
            "--disable-dev-shm-usage",
            "--no-first-run",
            "--disable-background-timer-throttling",
            "--disable-renderer-backgrounding"
          ]
        }
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": [
          "$APPDATA/caches/icons/*",
          "$APPCONFIG/caches/icons/*",
          "$CONFIG/caches/icons/*",
          "$APPDATA/profiles/*/saves/*/icon.png",
          "$APPCONFIG/profiles/*/saves/*/icon.png",
          "$CONFIG/profiles/*/saves/*/icon.png"
        ],
        "enable": true
      },
      "capabilities": ["ads", "core", "plugins"],
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost https://modrinth.com https://*.modrinth.com https://*.posthog.com https://*.sentry.io https://api.mclo.gs 'self' data: blob:",
        "font-src": ["https://cdn-raw.modrinth.com/fonts/"],
        "img-src": "https: 'unsafe-inline' 'self' asset: http://asset.localhost http://textures.minecraft.net blob: data:",
        "style-src": "'unsafe-inline' 'self'",
        "script-src": "https://*.posthog.com 'self'",
        "frame-src": "https://www.youtube.com https://www.youtube-nocookie.com https://discord.com 'self'",
        "media-src": "https://*.githubusercontent.com"
      }
    }
  }
}
