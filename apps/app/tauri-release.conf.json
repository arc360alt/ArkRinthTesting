{
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.modrinth.arkrinth",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewFixedRuntimePath": null,
      "webviewFixedRuntimeVersion": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/banner.bmp",
        "allowDowngrades": true,
        "languages": ["en-US"],
        "logDependencies": true
      }
    }
  },
  "build": {
    "distDir": "../app-frontend/dist",
    "devPath": "../app-frontend/dist",
    "beforeBuildCommand": "pnpm --filter=@modrinth/app-frontend run build",
    "beforeDevCommand": "pnpm --filter=@modrinth/app-frontend run dev",
    "features": []
  },
  "app": {
    "security": {
      "capabilities": [
        "core",
        "plugins"
      ]
    }
  },
  "plugins": {}
}
