{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ArkRinth",
  "identifier": "com.modrinth.arkrinth",
  "build": {
    "frontendDist": "../app-frontend/dist",
    "beforeBuildCommand": "pnpm --filter=@modrinth/app-frontend run build",
    "beforeDevCommand": "pnpm --filter=@modrinth/app-frontend run dev"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "allowDowngrades": true,
        "installerHooks": "./nsis/hooks.nsi"
      }
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "externalBin": [],
    "resources": [],
    "copyright": "Copyright (c) 2025 Arc Rinth",
    "category": "DeveloperTool",
    "shortDescription": "A Modrinth client",
    "longDescription": "A modern Modrinth client built with Tauri."
  }
}
